{
  "name": "api-tools-ts",
  "version": "1.2.6",
  "description": "A light-weight library to help you create APIs on the fly using express.js written in TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "build": "tsc",
    "build:docs": "npx typedoc src/index.ts",
    "publish:check": "tsc --build --clean && tsc --build --verbose",
    "publish": "npm publish"
  },
  "author": "naseif",
  "license": "MIT",
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.14",
    "prettier": "^2.5.1",
    "tslint": "^6.1.3",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@types/helmet": "^4.0.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "morgan": "^1.10.0"
  }
}
